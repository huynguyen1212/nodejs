<div class="mt-4">
  <h3>Cập nhật khóa học</h3>

  <form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input class="form-control" name="name" value="{{course.name}}" id="name" />
    </div>
    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea class="form-control" name="description" id="description">{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">Video ID</label>
      <input class="form-control" name="videoId" value="{{course.videoId}}" id="videoId" />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input class="form-control" name="level" value="{{course.level}}" id="level" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>